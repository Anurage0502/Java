<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".Nagmas">

    <Button
        android:id="@+id/button"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:text="Harmonium"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="680dp"/>

    <Button
        android:id="@+id/play"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="143dp"
        android:layout_marginBottom="351dp"
        android:onClick="player"
        android:text="Madhya"
        android:alpha="0.7"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="311dp"
        android:layout_height="87dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:text="SARANGI"
        android:textSize="70dp"
        android:textColorHighlight="@color/black"
        android:textColor="@color/black"
        android:textStyle="italic"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/play"
        android:layout_alignLeft="@+id/play"
        android:layout_marginStart="-83dp"
        android:layout_marginLeft="-83dp"
        android:alpha="1"
        app:srcCompat="@drawable/sarani2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Teentaal"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Drut"
        android:onClick="player1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="450dp"
        android:alpha="0.7"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="vilambit"
        android:onClick="player2"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="150dp"
        android:alpha="0.7"/>

    <ImageButton
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="300dp"
        android:onClick="pause"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="350dp"
        app:srcCompat="@drawable/drawable2" />


</RelativeLayout>